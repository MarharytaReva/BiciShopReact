@model BiciShop.Models.ViewModels.CreateBiciViewModel
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>


<form method="post" action="~/Admin/Create" enctype="multipart/form-data">

    <div class="mb-3 row">
        @Html.LabelFor(x => x.Bicicleta.Title, new { @class = "col-sm-2 col-form-label" })

        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Bicicleta.Title, new { @class = "form-control" })

            <span asp-validation-for="Bicicleta.Title" class="alert alert-danger alertStyle" role="alert">

            </span>
        </div>

    </div>
    <div class="mb-3 row">
        @Html.LabelFor(x => x.Bicicleta.Price, new { @class = "col-sm-2 col-form-label" })

        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Bicicleta.Price, new { @class = "form-control" })

            <span asp-validation-for="Bicicleta.Price" class="alert alert-danger alertStyle" role="alert">

            </span>
        </div>

    </div>

    <div class="mb-3 row">
        @Html.LabelFor(x => x.Bicicleta.Color, new { @class = "col-sm-2 col-form-label" })

        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Bicicleta.Color, new { @class = "form-control" })

            <span asp-validation-for="Bicicleta.Color" class="alert alert-danger alertStyle" role="alert">

            </span>
        </div>

    </div>
    <div class="mb-3 row">
        @Html.LabelFor(x => x.Bicicleta.IssueYear, new { @class = "col-sm-2 col-form-label" })

        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Bicicleta.IssueYear, new { @class = "form-control" })

            <span asp-validation-for="Bicicleta.IssueYear" class="alert alert-danger alertStyle" role="alert">

            </span>
        </div>

    </div>
    <div class="mb-3 row">
        @Html.LabelFor(x => x.Bicicleta.Weight, new { @class = "col-sm-2 col-form-label" })

        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Bicicleta.Weight, new { @class = "form-control" })

            <span asp-validation-for="Bicicleta.Weight" class="alert alert-danger alertStyle" role="alert">

            </span>
        </div>

    </div>
    <div class="mb-3 row">
        @Html.LabelFor(x => x.Bicicleta.WheelDiameter, new { @class = "col-sm-2 col-form-label" })

        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.Bicicleta.WheelDiameter, new { @class = "form-control" })

            <span asp-validation-for="Bicicleta.WheelDiameter" class="alert alert-danger alertStyle" role="alert">

            </span>
        </div>

    </div>

    <div class="mb-3 row">
        
        <label class = "col-sm-2 col-form-label" >Type</label>
        <div class="col-sm-10">
            <div>
                
                    <select id="typeSelect" class="custom-select" asp-for="Bicicleta.BiciTypeId" asp-items="@Model.BiciTypes">
                    </select>
                   
               
            </div>
        </div>

    </div>



    <div class="input-group mb-3">
        <div class="input-group-prepend">
            <span class="input-group-text" id="inputGroupFileAddon01">Upload</span>
        </div>
        <div class="custom-file">

            <input asp-for="File" type="file" name="File" class="custom-file-input" id="inputGroupFile01" aria-describedby="inputGroupFileAddon01">
            <label class="custom-file-label" for="inputGroupFile01">Choose photo</label>
        </div>
    </div>
    @Html.HiddenFor(x => x.Bicicleta.BicicletaId)
    @Html.HiddenFor(x => x.Bicicleta.Photo)

    <div class="text-center">
        <input type="submit" value="Save" class="btn btn-success" />
    </div>


</form>


